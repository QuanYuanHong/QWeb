
@{
    Layout = null;
    Book.Model.T_Base_Provider provider = ViewBag.provider;
}

<div class="pageContent">
    <form method="post" action="/provider/updatesave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <input name="Id" type="hidden" size="30" value="@provider.Id" />
                <label>出版社：</label>
                <input name="Name" type="text" size="30" value="@provider.Name" />
            </p>

            <p>
                <label>联系人：</label>
                <input name="Connector" type="text" size="30" value="@provider.Connector" />
            </p>
            <p>
                <label>电话：</label>
                <input name="Phone" type="text" size="30" value="@provider.Phone" />
            </p>
            <p>
                <label>地址：</label>
                <input name="Address" class="text" type="text" size="30" value="@provider.Address" />
            </p>
            <p>
                <label>邮箱：</label>
                <input name="Email" class="text" type="text" size="30" value="@provider.Email" />
            </p>
            <p>
                <label>传真：</label>
                <input name="Fax" type="text" size="30" value="@provider.Fax" />
            </p>
        </div>
        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>


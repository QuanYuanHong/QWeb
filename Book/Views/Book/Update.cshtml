
@{
    Layout = null;
    Book.Model.T_Base_Book book = ViewBag.Book;
}

<div class="pageContent">
    <form method="post" action="/Book/UpdateSave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <input name="Id" type="hidden" value="@book.Id" size="30" />@*记录当前记录的书本Id*@
                <label>书名：</label>
                <input name="BookName" type="text"  value="@book.BookName" size="30" />
            </p>
            <p>
                <label>编号：</label>
                <input name="Code" type="text" value="@book.Code" size="30" />
            </p>
            <p>
                <label>作者：</label>
                <input name="Author" type="text" value="@book.Author" size="30" />
            </p>
            <p>
                <label>出版社：</label>
                <input name="PressName" type="text" value="@book.PressName" size="30" />
            </p>
            <p>
                <label>价格：</label>
                <input name="Price" type="text" size="30" value="@book.Price" class="number textInput" />
            </p>
            <p>
                <label>出版时间：</label>
                <input name="PYear" type="text" size="30" value="@book.Pyear.ToString("yyyy/MM/dd")" class="date textInput readonly" datefmt="yyyy/MM/dd" readonly="true" />
            </p>
            <p>
                <label>版本：</label>
                <input name="Version" value="@book.Version" size="30" type="text" />
            </p>
            <p>
                <label>封面：</label>
                <input name="Pic" value="@book.Pic" size="30" type="text" />
            </p>
        </div>
        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>


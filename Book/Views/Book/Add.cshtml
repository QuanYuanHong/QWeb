
@{
    Layout = null;
}

<div class="pageContent">
    <form method="post" action="/Book/AddSave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <label>书名：</label>
                <input name="BookName" type="text" size="30" />
            </p>
            <p>
                <label>编号：</label>
                <input name="Code" type="text" size="30" />
            </p>
            <p>
                <label>作者：</label>
                <input name="Author" type="text" size="30" />
            </p>
            <p>
                <label>出版社：</label>
                <input name="PressName" type="text" size="30" />
            </p>
            <p>
                <label>价格：</label>
                <input name="Price" type="text" size="30" class="number textInput" />
            </p>
            <p>
                <label>出版时间：</label>
                <input name="PYear" type="text" size="30" class="date textInput readonly" datefmt="yyyy/MM/dd" readonly="true" />
            </p>           
            <p>
                <label>版本：</label>
                <input name="Version" size="30" type="text" />
            </p>
            <p>
                <label>封面：</label>
                <input name="Pic" size="30" type="text" />
            </p>
        </div>
        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>


